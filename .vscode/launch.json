{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Index stdlib",
            "type": "go",
            "request": "launch",
            "mode":"debug",
            "program": "${workspaceRoot}/server/cmd/stdlib_indexer",
        },
         {
            "name": "Launch LSP Server",
            "type": "go",
            "request": "launch",
            "mode":"debug",
            "program": "${workspaceRoot}/server/cmd/lsp",
        },
        {
            "name": "Attach process",
            "type": "go",
            "request":"attach",
            "mode": "local",
            "processId": "c3lsp"
        },
        {
            "name": "Debug VS Code Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/client/vscode"
            ],
            "outFiles": [
                "${workspaceFolder}/client/vscode/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build-vscode-dev"
        }
    ],
    "compounds": [
        {
            "name": "Debug Extension + LSP Server",
            "configurations": [
                "Debug VS Code Extension",
                "Launch LSP Server"
            ],
            "stopAll": true
        }
    ]
}